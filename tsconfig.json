{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "checkJs": false,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "types": ["mocha", "node"],
    "jsx": "preserve",
    "jsxImportSource": "wc-compiler",
    "lib": ["DOM"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
