{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "./src/",
    "./test/**/*.spec.js"
  ]
}