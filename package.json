{
  "name": "wcc",
  "version": "0.0.1",
  "description": "Experimental native Web Components compiler.",
  "main": "src/wcc.js",
  "type": "module",
  "author": "Owen Buckley <owen@thegreenhouse.io>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "eslint \"*.*js\" \"./src/**/**/*.js\" \"./test/**/**/*.js\"",
    "develop": "yarn clean && concurrently \"nodemon --watch src --watch docs -e js,md,css,html ./build.js\" \"http-server ./dist --open\"",
    "build": "node ./build.js",
    "serve": "yarn clean && node ./build.js && http-server ./dist --open",
    "example:ssg": "node ./examples/ssg.js",
    "example:ssr": "node ./examples/ssr.js",
    "start": "yarn develop",
    "test": "c8 mocha --parallel",
    "test:tdd": "yarn test --watch"
  },
  "dependencies": {
    "acorn": "^8.7.0",
    "acorn-walk": "^8.2.0",
    "parse5": "^6.0.1"
  },
  "devDependencies": {
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "fastify": "^3.27.4",
    "fastify-static": "^4.6.1",
    "http-server": "^14.1.0",
    "jsdom": "^19.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "rimraf": "^3.0.2",
    "unified": "^10.1.2"
  }
}
