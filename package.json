{
  "name": "wcc",
  "version": "0.0.1",
  "description": "Experimental native Web Components compiler.",
  "main": "src/wcc.js",
  "type": "module",
  "author": "Owen Buckley <owen@thegreenhouse.io>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "eslint \"*.*js\" \"./src/**/**/*.js\" \"./test/**/**/*.js\"",
    "ssg": "node ./ssg.js",
    "ssg:serve": "node ./ssg.js && http-server ./dist",
    "ssr": "nodemon --watch src --watch www ./ssr.js",
    "start": "yarn ssr",
    "test": "c8 mocha",
    "test:tdd": "yarn test --watch"
  },
  "dependencies": {
    "acorn": "^8.7.0",
    "acorn-walk": "^8.2.0",
    "parse5": "^6.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "eslint": "^8.14.0",
    "fastify": "^3.27.4",
    "fastify-static": "^4.6.1",
    "fs-extra": "^10.0.1",
    "http-server": "^14.1.0",
    "jsdom": "^19.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2"
  }
}
