{
  "name": "wc-compiler",
  "version": "0.5.0",
  "description": "Experimental native Web Components compiler.",
  "main": "src/wcc.js",
  "type": "module",
  "author": "Owen Buckley <owen@thegreenhouse.io>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "src/",
    "dist/wcc.dist.cjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "eslint \"*.*js\" \"./src/**/**/*.js*\" \"./test/**/**/*.js*\"",
    "develop": "concurrently \"nodemon --watch src --watch docs -e js,md,css,html,jsx ./build.js\" \"http-server ./dist --open\"",
    "build": "node ./build.js",
    "serve": "node ./build.js && http-server ./dist --open",
    "start": "npm run develop",
    "test": "c8 node --experimental-loader ./test-jsx-loader.js ./node_modules/mocha/bin/mocha",
    "test:tdd": "npm run test -- --watch",
    "dist": "rollup -c rollup.config.js",
    "prepublishOnly": "npm run clean && npm run dist",
    "sandbox": "node --trace-warnings --experimental-loader ./src/jsx-loader.js ./sandbox.js",
    "sandbox:develop": "concurrently \"nodemon --watch src --watch test -e js,md,css,html,jsx --trace-warnings --experimental-loader ./src/jsx-loader.js ./sandbox.js\" \"http-server ./sandbox --open\"",
    "sandbox:serve": "npm run sandbox && http-server ./sandbox --open",
    "todo:develop": "concurrently \"nodemon --watch todo-app --watch test -e js,md,css,html,jsx --trace-warnings --experimental-loader ./src/jsx-loader.js ./todo.js\" \"http-server ./sandbox --open\""
  },
  "dependencies": {
    "acorn": "^8.7.0",
    "acorn-jsx": "^5.3.2",
    "acorn-walk": "^8.2.0",
    "escodegen": "^2.0.0",
    "parse5": "^6.0.1"
  },
  "devDependencies": {
    "@mapbox/rehype-prism": "^0.8.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "http-server": "^14.1.0",
    "jsdom": "^19.0.0",
    "mocha": "^9.2.2",
    "node-fetch": "^3.2.6",
    "nodemon": "^2.0.15",
    "prismjs": "^1.28.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-raw": "^6.1.1",
    "rehype-slug": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-toc": "^8.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "simple.css": "^0.1.3",
    "unified": "^10.1.2"
  }
}
